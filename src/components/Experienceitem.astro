---
export interface props {
    title: string;
    date: string;
    link?: string;
    description: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-black -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

    <h3 class="text-4xl font-bold text-black">
        {title}
    </h3>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-gray-500 text-2xl md:col-span-3">
    {description}
  </div>
</div>
